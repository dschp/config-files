[main]
capslock    = layer(control)
leftcontrol = overload(mylayer, esc)
rightalt    = layer(alt)


[mylayer]
grave = esc
tab = insert
z = backspace
x = delete

leftshift = compose

space = layer(mycursor)
enter = layer(mycursor)

/ = layer(myctrlalt)

f = layer(myfrench)
g = layer(mygerman)
p = layer(myportuguese)
s = layer(myspanish)

[mycursor]
w = up
a = left
s = down
d = right
q = home
e = end
z = pageup
c = pagedown

y = home
u = pageup
i = pagedown
o = end
h = left
j = down
k = up
l = right

, = C-A-a
. = C-A-e
; = C-A-b
' = C-A-f
[ = C-A-u
] = C-A-d
- = C-A-p
= = C-A-n

[myctrlalt]
a = C-A-a
e = C-A-e
u = C-A-u
d = C-A-d
f = C-A-f
b = C-A-b
n = C-A-n
p = C-A-p


[myfrench]
q = macro(compose a ")
a = macro(compose a `)
s = macro(compose a ^)

w = macro(compose e `)
e = macro(compose e ')
d = macro(compose e ^)

y = macro(compose y ")

u = macro(compose u ")
j = macro(compose u `)

i = macro(compose i ")
k = macro(compose i ^)

o = macro(compose o ")
l = macro(compose o ^)

c = macro(compose c ,)
n = macro(compose n ~)

z = macro(compose a e)
x = macro(compose o e)

[myfrench+shift]
q = macro(compose A ")
a = macro(compose A `)
s = macro(compose A ^)

w = macro(compose E `)
e = macro(compose E ')
d = macro(compose E ^)

y = macro(compose Y ")

u = macro(compose U ")
j = macro(compose U ')

i = macro(compose I ")
i = macro(compose I ^)

o = macro(compose O ")
l = macro(compose O ^)

c = macro(compose C ,)
n = macro(compose N ~)

z = macro(compose A E)
x = macro(compose O E)

[mygerman]
a = macro(compose a ")
o = macro(compose o ")
u = macro(compose u ")
s = macro(compose ss)
[mygerman+shift]
a = macro(compose A ")
o = macro(compose O ")
u = macro(compose U ")
s = macro(compose SS)

[myportuguese]
c = macro(compose c ,)

a = macro(compose a ')
e = macro(compose e ')
i = macro(compose i ')
o = macro(compose o ')
u = macro(compose u ')

s = macro(compose a ~)
9 = macro(compose o ~)

q = macro(compose a `)
z = macro(compose a ^)
d = macro(compose e ^)
l = macro(compose o ^)
[myportuguese+shift]
c = macro(compose C ,)

a = macro(compose A ')
e = macro(compose E ')
i = macro(compose I ')
o = macro(compose O ')
u = macro(compose U ')

s = macro(compose A ~)
9 = macro(compose O ~)

q = macro(compose A `)
z = macro(compose A ^)
d = macro(compose E ^)
l = macro(compose O ^)


[myspanish]
1 = macro(compose ! !)
/ = macro(compose ? ?)

n = macro(compose n ~)

a = macro(compose a ')
e = macro(compose e ')
i = macro(compose i ')
o = macro(compose o ')
u = macro(compose u ')
j = macro(compose u ")
[myspanish+shift]
n = macro(compose N ~)

a = macro(compose A ')
e = macro(compose E ')
i = macro(compose I ')
o = macro(compose O ')
u = macro(compose U ')
j = macro(compose U ")
