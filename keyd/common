[main]
leftcontrol  = oneshot(mylayer)
rightcontrol = oneshot(control)
capslock     = oneshot(control)
shift        = oneshot(shift)
meta         = oneshot(meta)
alt          = oneshot(alt)


j+k = clear()


[meta]
esc = clear()
[alt]
esc = clear()
[control]
esc = clear()
[shift]
esc = clear()

[myCA:C-A]
esc = clear()

[myMC:M-C]
esc = clear()
[myMA:M-A]
esc = clear()
[myMS:M-S]
esc = clear()


[mylayer]
esc = clear()

grave = esc
tab = insert
z = backspace
x = delete

leftshift = compose

space = oneshot(mycursor)
enter = oneshot(mycursor)

/ = oneshot(myCA)

f = oneshot(myfrench)
g = oneshot(mygerman)
p = oneshot(myportuguese)
s = oneshot(myspanish)

[mycursor]
esc = clear()
space = oneshot(mycursor)
enter = oneshot(mycursor)

w = up
a = left
s = down
d = right
q = home
e = end
z = pageup
c = pagedown

y = home
u = pageup
i = pagedown
o = end
h = left
j = down
k = up
l = right

1 = f1
2 = f2
3 = f3
4 = f4
5 = f5
6 = f6
7 = f7
8 = f8
9 = f9
0 = f10
- = f11
= = f12


[myfrench]
esc = clear()

q = macro(compose a ")
a = macro(compose a `)
s = macro(compose a ^)

w = macro(compose e `)
e = macro(compose e ')
d = macro(compose e ^)

y = macro(compose y ")

u = macro(compose u ")
j = macro(compose u `)

i = macro(compose i ")
k = macro(compose i ^)

o = macro(compose o ")
l = macro(compose o ^)

c = macro(compose c ,)
n = macro(compose n ~)

z = macro(compose a e)
x = macro(compose o e)

[myfrench+shift]
q = macro(compose A ")
a = macro(compose A `)
s = macro(compose A ^)

w = macro(compose E `)
e = macro(compose E ')
d = macro(compose E ^)

y = macro(compose Y ")

u = macro(compose U ")
j = macro(compose U ')

i = macro(compose I ")
i = macro(compose I ^)

o = macro(compose O ")
l = macro(compose O ^)

c = macro(compose C ,)
n = macro(compose N ~)

z = macro(compose A E)
x = macro(compose O E)

[mygerman]
esc = clear()

a = macro(compose a ")
o = macro(compose o ")
u = macro(compose u ")
s = macro(compose ss)
[mygerman+shift]
a = macro(compose A ")
o = macro(compose O ")
u = macro(compose U ")
s = macro(compose SS)

[myportuguese]
esc = clear()

