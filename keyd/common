a = macro(compose a ')
e = macro(compose e ')
i = macro(compose i ')
o = macro(compose o ')
u = macro(compose u ')

s = macro(compose a ~)
9 = macro(compose o ~)

q = macro(compose a `)
z = macro(compose a ^)
d = macro(compose e ^)
l = macro(compose o ^)
[myportuguese+shift]
c = macro(compose C ,)

a = macro(compose A ')
e = macro(compose E ')
i = macro(compose I ')
o = macro(compose O ')
u = macro(compose U ')

s = macro(compose A ~)
9 = macro(compose O ~)

q = macro(compose A `)
z = macro(compose A ^)
d = macro(compose E ^)
l = macro(compose O ^)


[myspanish]
esc = clear()

1 = macro(compose ! !)
/ = macro(compose ? ?)

n = macro(compose n ~)

a = macro(compose a ')
e = macro(compose e ')
i = macro(compose i ')
o = macro(compose o ')
u = macro(compose u ')
j = macro(compose u ")
[myspanish+shift]
n = macro(compose N ~)

a = macro(compose A ')
e = macro(compose E ')
i = macro(compose I ')
o = macro(compose O ')
u = macro(compose U ')
j = macro(compose U ")
