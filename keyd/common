[aliases]
# just for placeholder
prog3    = mylayer
prog4    = mycursor
hp       = myCA
camera   = myMA
sound    = myMC
question = myMS
email    = myMCA
chat     = myMCS
search   = myMAS

send        = myfrench
reply       = mygerman
forwardmail = myportuguese
save        = myspanish


[main]
capslock = oneshot(control)
control  = oneshot(control)
shift    = oneshot(shift)
meta     = oneshot(meta)
alt      = oneshot(alt)

mylayer  = oneshot(mylayer)
mycursor = oneshot(mycursor)

d+f = clear()
j+k = clear()

enter = overload(myenter, enter)

myCA = oneshot(myCA)

myMA = oneshot(myMA)
myMC = oneshot(myMC)
myMS = oneshot(myMS)

myMCA = oneshot(myMCA)
myMCS = oneshot(myMCS)
myMAS = oneshot(myMAS)


myfrench     = oneshot(myfrench)
mygerman     = oneshot(mygerman)
myportuguese = oneshot(myportuguese)
myspanish    = oneshot(myspanish)


[myCA:C-A]
[myMC:M-C]
[myMA:M-A]
[myMS:M-S]
[myMCA:M-C-A]
[myMCS:M-C-S]
[myMAS:M-A-S]


[mylayer]
grave = esc
tab = insert
z = backspace
x = delete

leftshift = compose

space = oneshot(mycursor)

/ = oneshot(myCA)

f = oneshot(myfrench)
g = oneshot(mygerman)
p = oneshot(myportuguese)
s = oneshot(myspanish)

[myenter:M]
apostrophe = M-enter

[mycursor]
w = up
a = left
s = down
d = right
q = home
e = end
z = pageup
x = delete
c = pagedown

y = home
u = pageup
i = pagedown
o = end
h = left
j = down
k = up
l = right

1 = f1
2 = f2
3 = f3
4 = f4
5 = f5
6 = f6
7 = f7
8 = f8
9 = f9
0 = f10
- = f11
= = f12

left  = left
right = right
up    = up
down  = down

[mycursor+shift]
x = backspace


[myfrench]
q = macro(compose a ")
a = macro(compose a `)
s = macro(compose a ^)

e = macro(compose e `)
r = macro(compose e ')
d = macro(compose e ^)

y = macro(compose y ")

u = macro(compose u ")
j = macro(compose u `)

i = macro(compose i ")
k = macro(compose i ^)

o = macro(compose o ")
l = macro(compose o ^)

c = macro(compose c ,)
n = macro(compose n ~)

z = macro(compose a e)
x = macro(compose o e)

[myfrench+shift]
q = macro(compose A ")
a = macro(compose A `)
s = macro(compose A ^)

e = macro(compose E `)
r = macro(compose E ')
d = macro(compose E ^)

y = macro(compose Y ")

u = macro(compose U ")
j = macro(compose U ')

i = macro(compose I ")
i = macro(compose I ^)

o = macro(compose O ")
l = macro(compose O ^)

c = macro(compose C ,)
n = macro(compose N ~)

z = macro(compose A E)
x = macro(compose O E)

[mygerman]
a = macro(compose a ")
o = macro(compose o ")
