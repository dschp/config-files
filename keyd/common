[aliases]
# just for placeholder
prog1     = control
prog2     = alt
prog3     = mylayer
prog4     = myclear

dashboard = myspace
suspend   = myenter
close     = mybackslash

send        = myfrench
reply       = mygerman
forwardmail = myportuguese
save        = myspanish


[main]
capslock = oneshot(control)
control  = oneshot(control)
shift    = oneshot(shift)
meta     = oneshot(meta)
alt      = oneshot(alt)

myspace  = overload(alt, space)
mylayer  = layer(mylayer)
myclear  = clear()

d+f = clear()
j+k = clear()

mouse1 = clear()
mouse2 = clear()


myfrench     = oneshot(myfrench)
mygerman     = oneshot(mygerman)
myportuguese = oneshot(myportuguese)
myspanish    = oneshot(myspanish)


[mylayer]
w = up
a = left
s = down
d = right
q = home
e = end
z = pageup
x = delete
c = pagedown

u = home
i = end
h = left
j = down
k = up
l = right
m     = pagedown
comma = pageup

f = oneshot(myfrench)
g = oneshot(mygerman)
v = compose
b = oneshot(myportuguese)
n = oneshot(myspanish)

1 = f1
2 = f2
3 = f3
4 = f4
5 = f5
6 = f6
7 = f7
8 = f8
9 = f9
0 = f10
- = f11
= = f12

esc   = clear()
grave = esc
tab   = insert


[myfrench]
q = macro(compose a ")
a = macro(compose a `)
s = macro(compose a ^)

e = macro(compose e `)
r = macro(compose e ')
d = macro(compose e ^)

y = macro(compose y ")

u = macro(compose u ")
j = macro(compose u `)
h = macro(compose u ^)

i = macro(compose i ")
k = macro(compose i ^)

o = macro(compose o ")
l = macro(compose o ^)

c = macro(compose c ,)
n = macro(compose n ~)

z = macro(compose a e)
x = macro(compose o e)

[myfrench+shift]
q = macro(compose A ")
a = macro(compose A `)
s = macro(compose A ^)

e = macro(compose E `)
r = macro(compose E ')
d = macro(compose E ^)

y = macro(compose Y ")

u = macro(compose U ")
j = macro(compose U ')
h = macro(compose U ^)

i = macro(compose I ")
i = macro(compose I ^)

o = macro(compose O ")
l = macro(compose O ^)

c = macro(compose C ,)
n = macro(compose N ~)

z = macro(compose A E)
x = macro(compose O E)

[mygerman]
a = macro(compose a ")
o = macro(compose o ")
u = macro(compose u ")
s = macro(compose ss)
[mygerman+shift]
a = macro(compose A ")
o = macro(compose O ")
u = macro(compose U ")
s = macro(compose SS)

[myportuguese]
c = macro(compose c ,)

a = macro(compose a ')
e = macro(compose e ')
i = macro(compose i ')
o = macro(compose o ')
u = macro(compose u ')

s = macro(compose a ~)
9 = macro(compose o ~)

q = macro(compose a `)
z = macro(compose a ^)
d = macro(compose e ^)
l = macro(compose o ^)
[myportuguese+shift]
c = macro(compose C ,)

a = macro(compose A ')
e = macro(compose E ')
i = macro(compose I ')
o = macro(compose O ')
u = macro(compose U ')

s = macro(compose A ~)
9 = macro(compose O ~)

q = macro(compose A `)
z = macro(compose A ^)
d = macro(compose E ^)
l = macro(compose O ^)


[myspanish]
1 = macro(compose ! !)
/ = macro(compose ? ?)

n = macro(compose n ~)

a = macro(compose a ')
e = macro(compose e ')
i = macro(compose i ')
o = macro(compose o ')
u = macro(compose u ')
j = macro(compose u ")
[myspanish+shift]
n = macro(compose N ~)

a = macro(compose A ')
e = macro(compose E ')
i = macro(compose I ')
o = macro(compose O ')
u = macro(compose U ')
