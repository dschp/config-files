include "/usr/share/nano/*.nanorc"
include "/usr/share/nano/extra/*.nanorc"

set tabsize 4

unbind M-j  all
unbind ^T   all
unbind M-t  all
unbind Ins  all
unbind M-/  all
unbind M-\  all

bind ^Z   suspend       all

bind ^F   forward       all
bind ^B   back          all
bind M-F  nextword      all
bind M-B  prevword      all
bind M-p  beginpara     all
bind M-n  endpara       all
bind M-a  prevblock     all
bind M-e  nextblock     all
bind M-,  pageup        all
bind M-.  pagedown      all
bind M-<  firstline     all
bind M->  lastline      all
bind M-:  toprow        all
bind M-"  bottomrow     all
bind M-l  center        all

bind Sh-M-w writeout    all
bind Sh-M-s savefile    all

bind ^W  cut            all
bind M-w copy           all
bind ^Y  paste          all
bind M-k zap            all
bind M-d chopwordright  all
bind M-h chopwordleft   all
bind ^J  enter          all
bind ^O  enter          all

bind ^/   undo          all
bind ^\   redo          all
bind M-u  recordmacro   all
bind ^U   runmacro      all
bind M-;  comment       all
bind M-[  unindent      all
bind M-]  indent        all

bind ^S   whereis       all
bind ^R   wherewas      all
bind M-s  findnext      all
bind M-r  findprevious  all
bind ^Q   replace       all
bind M-/  findbracket   all

bind ^Space mark        all
bind M-`    anchor      all
bind M-q    nextanchor  all
bind Sh-M-q prevanchor  all

bind F3   constantshow       all
bind F4   linenumbers        all
bind F5   softwrap           all
bind F6   whitespacedisplay  all
bind F7   autoindent         all
bind F8   smarthome          all
bind F9   nosyntax           all
bind F10  breaklonglines     all
bind F11  cutfromcursor      all
bind F12  tabstospaces       all
